<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/assignTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/assignCourseLayout">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/assignTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assignment Title" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/assignCourseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/assignTitleLayout"
            app:layout_constraintBottom_toTopOf="@+id/assignDueDateLayout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/assignCourseInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Associated Class" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/assignDueDateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="300dp"
            app:layout_constraintTop_toBottomOf="@+id/assignCourseLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/assignDueDateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Due dates: MM-DD" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- instruction Start and End time -->
      <!--  <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/assignDueTimeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="180dp"
            app:layout_constraintTop_toBottomOf="@+id/assignDueDateLayout"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/assignDueTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start Time:2 or 12.30" />
        </com.google.android.material.textfield.TextInputLayout> -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>